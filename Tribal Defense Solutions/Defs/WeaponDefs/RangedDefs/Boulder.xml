<?xml version="1.0" encoding="utf-8" ?>

<ThingDefs>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Boulder</defName>
    <label>Thrown Boulder</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Bullet</damageDef>
      <DamageAmountBase>30</DamageAmountBase>
      <Speed>10</Speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseMakeableNeolithicWeapon">
    <defName>Gun_Boulder</defName>
    <label>Boulder</label>
    <description>A very large rock...does A LOT damage but is slow to fire and has short range</description>
    <graphicData>
      <texPath>stuff/Mine/Boulder</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>InteractPistol</soundInteract>
    <statBases>
      <WorkToMake>500</WorkToMake>
      <Mass>4.0</Mass>
      <AccuracyTouch>0.90</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Rocks>100</Rocks>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_Pistol</projectileDef>
        <warmupTime>1.5</warmupTime>
        <range>5</range>
        <SoundCast>ThrowMolotovCocktail</SoundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>
</ThingDefs>