<?xml version="1.0" encoding="utf-8" ?>

<ThingDefs>
  <ThingDef ParentName="BuildingBase">
    <defName>TrapTripwire</defName>
    <label>Tripwire trap</label>
    <thingClass>Building_TrapRearmable</thingClass>
    <graphicData>
      <texPath>Things/Building/Security/DeadfallArmed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <drawerType>RealtimeOnly</drawerType>
    <rotatable>true</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Beauty>-4</Beauty>
      <TrapMeleeDamage>0</TrapMeleeDamage>
      <TrapSpringChance>0.8</TrapSpringChance>
    </statBases>
    <description>A simple rope left to trip people, doent take long for enemies to recover</description>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>70</costStuffCount>
    <designationCategory>Security</designationCategory>
    <building>
      <isTrap>true</isTrap>
      <trapDamageCategory>Sharp</trapDamageCategory>
      <trapUnarmedGraphicData>
        <texPath>Things/Building/Security/DeadfallUnarmed</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <shaderType>Cutout</shaderType>
      </trapUnarmedGraphicData>
    </building>
  </ThingDef>
</ThingDefs>